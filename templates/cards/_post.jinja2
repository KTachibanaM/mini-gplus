{% from "cards/_comment.jinja2" import render_comment with context %}

{% macro render_post(post) %}
    <div class="ui fluid raised card">
        <div class="ui content comments">
            <div class="comment">
                <a class="author" href="/profile/{{ post.author.user_id }}">
                    {{ post.author.user_id }}
                </a>
                <div class="metadata">
                    <span class="date">
                        {% if user.owns_post(post) %}
                            {{ post.created_at }} to {{ post.sharing_scope_str }}
                        {% else %}
                            {{ post.created_at }}
                        {% endif %}
                    </span>
                </div>
                <div class="text">
                    {{ post.content }}
                </div>
                <div class="actions">
                    <button class="comment-action">
                        <a href="/reply/{{ post.id }}">Comment</a>
                    </button>
                    {% if user.owns_post(post) %}
                        <form method="post" action="/rm-post" style="display: inline;">
                            <input type="hidden" name="id" value="{{ post.id }}" readonly>
                            <button class="comment-action">Delete</button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
        {% if post.comments %}
            <div class="content">
                <div class="ui comments">
                    {% for comment in post.comments %}
                        {{ render_comment(comment, post) }}
                    {% endfor %}
                </div>
            </div>
        {% endif %}
        <div class="extra content">
            <form class="ui form" method="post" action="/add-comment">
                <input type="hidden" name="post_id" value="{{ post.id }}" readonly>
                <div class="fields">
                    <div class="twelve wide field">
                        <input name="content"/>
                    </div>
                    <div class="four wide field">
                        <button class="ui fluid blue button">Comment</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endmacro %}