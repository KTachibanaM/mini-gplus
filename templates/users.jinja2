{% from "_header.jinja2" import header %}

<html>
<head>
    <title>Users | mini-gplus</title>
</head>
<body>
<nav>
    {{ header('/users') }} | Hi {{ current_user.user_id }} <a href="/signout">Signout</a>
</nav>
<ul>
    {% for user in users %}
        <li>{{ user.user_id }} |
            {% for circle in circles %}
                <form method="post" action="/togglemember" style="display: inline">
                    {{ circle.name }}
                    <input type="hidden" name="user_id" value="{{ user.id }}">
                    <input type="hidden" name="circle_id" value="{{ circle.id }}">
                    <input type="submit" value="{{ '-' if circle.is_member(user) else '+' }}">
                </form> |
            {% endfor %}
        </li>
    {% endfor %}
</ul>
</body>
</html>