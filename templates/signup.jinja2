{% extends "_base_guest.jinja2" %}
{% from "_form.jinja2" import render_field, render_errors %}
{% block title %}Sign up | mini-gplus{% endblock %}
{% block content %}
    <form class="ui form error" method='post'>
        <section class="field">
            {{ render_field(form.id) }}
        </section>
        <section class="field">
            {{ render_field(form.password) }}
        </section>
        <section class="field">
            {{ render_field(form.confirm_password) }}
        </section>
        {{ render_errors(form) }}
        <button class="ui submit button">Sign up</button>
    </form>
{% endblock %}
