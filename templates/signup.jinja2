{% extends "base/_base_guest.jinja2" %}
{% from "_form.jinja2" import render_field, render_flashed_errors %}
{% block title %}Sign up | mini-gplus{% endblock %}
{% block content %}
    <form action={{ url_for("add_user") }} class="ui form error" method='post'>
        <div class="field">
            {{ render_field(form.id) }}
        </div>
        <div class="field">
            {{ render_field(form.password) }}
        </div>
        <div class="field">
            {{ render_field(form.confirm_password) }}
        </div>
        {{ render_flashed_errors() }}
        <button class="ui fluid button">Sign up</button>
    </form>
{% endblock %}
